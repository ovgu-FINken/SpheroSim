<?xml version="1.0" encoding="utf-8"?>
<robot name="sphero">

  <link name="base_link">
    <inertial>
      <mass value="0.15" />
      <inertia ixx="0.54" ixy="0.0" ixz="0.0" iyy="0.54" iyz="0.0" izz="0.54" />
      <origin  rpy="0 0 0" xyz="0 0 -0.025"/>
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="orange">
        <color rgba="1 0 0 1"/>
      </material>    
    </visual>
  </link>

  <joint name="rotation_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="base_link" />
    <child link="base_rotation_link" />
    <axis xyz="0 0 1" />
    <limit effort="18.85" lower="-1e+16" upper="1e+16" velocity="0.2" />
  </joint>

  <link name="base_rotation_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.0029" ixy="0.0" ixz="0.0" iyy="0.0029" iyz="0.0" izz="0.0029" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
	    <sphere radius="0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 .8 0.5"/>
      </material>    
    </visual>
  </link>

  <joint name="direction_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="base_rotation_link" />
    <child link="base_direction_link" />
    <axis xyz="-1 0 0" />
    <limit effort="18.85" velocity="0.2" />
  </joint>

  <link name="base_direction_link">
    <gravity>
      0
    </gravity>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.00029" ixy="0.0" ixz="0.0" iyy="0.00029" iyz="0.0" izz="0.00029" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.0381"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <geometry>
        <mesh filename="package://sphero_description/meshes/Sphero_Textured.dae" scale="1.3 1.3 1.3"/>
      </geometry>
    </visual>
  </link>

</robot>
